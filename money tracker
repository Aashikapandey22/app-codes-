
import React, { useState, useEffect, useRef } from 'react';
import { PieChart, Pie, Cell, ResponsiveContainer, Tooltip, ScatterChart, Scatter, XAxis, YAxis, ZAxis } from 'recharts';
import { Camera, Plus, TrendingUp, MapPin, List, Share2, Settings, QrCode, CheckCircle, AlertTriangle, Clock, X, Download, Users, Link as LinkIcon, Copy } from 'lucide-react';
import { GlassCard, Badge } from './UI';
import { Expense, GeoLocation, BudgetSettings, SplitRequest, SharedBudget, Roommate } from '../types';
import { analyzeReceipt } from '../services/geminiService';

const COLORS = ['#10B981', '#3B82F6', '#F59E0B', '#EF4444', '#8B5CF6'];

interface MoneyTrackerProps {
  expenses: Expense[];
  onAddExpense: (expense: Expense) => void;
  userLocation: GeoLocation | null;
}

export const MoneyTracker: React.FC<MoneyTrackerProps> = ({ expenses, onAddExpense, userLocation }) => {
  // --- STATE ---
  const [activeTab, setActiveTab] = useState<'overview' | 'budget' | 'splits'>('overview');
  
  // Add Expense State
  const [amount, setAmount] = useState('');
  const [category, setCategory] = useState('Food');
  const [desc, setDesc] = useState('');
  const [isScanning, setIsScanning] = useState(false);
  const fileInputRef = useRef<HTMLInputElement>(null);

  // Visualization State
  const [viewMode, setViewMode] = useState<'chart' | 'map'>('chart');

  // Budget State
  const [budget, setBudget] = useState<BudgetSettings>(() => {
    const saved = localStorage.getItem('budgetSettings');
    return saved ? JSON.parse(saved) : { 
      total: 5000, 
      categories: { 'Food': 2000, 'Transport': 1000, 'Shopping': 1000, 'Bills': 500, 'Entertainment': 500 } 
    };
  });

  // Split State
  const [splits, setSplits] = useState<SplitRequest[]>(() => {
    const saved = localStorage.getItem('splitRequests');
    return saved ? JSON.parse(saved) : [];
  });
  const [splittingExpense, setSplittingExpense] = useState<Expense | null>(null);
  const [splitShares, setSplitShares] = useState(2);

  // Shared Budget State
  const [sharedBudgets, setSharedBudgets] = useState<SharedBudget[]>(() => {
    const saved = localStorage.getItem('sharedBudgets');
    return saved ? JSON.parse(saved) : [];
  });
  const [isCreatingBudget, setIsCreatingBudget] = useState(false);
  const [newBudgetTitle, setNewBudgetTitle] = useState('');
  const [newBudgetTotal, setNewBudgetTotal] = useState('');
  const [newRoommates, setNewRoommates] = useState<string[]>([]);
  const [newRoommateName, setNewRoommateName] = useState('');


  // --- PERSISTENCE ---
  useEffect(() => {
    localStorage.setItem('budgetSettings', JSON.stringify(budget));
  }, [budget]);

  useEffect(() => {
    localStorage.setItem('splitRequests', JSON.stringify(splits));
  }, [splits]);

  useEffect(() => {
    localStorage.setItem('sharedBudgets', JSON.stringify(sharedBudgets));
  }, [sharedBudgets]);


  // --- DERIVED DATA ---
  const totalSpent = expenses.reduce((sum, e) => sum + e.amount, 0);
  const percentUsed = (totalSpent / budget.total) * 100;
  
  const getCategorySpend = (cat: string) => expenses.filter(e => e.category === cat).reduce((sum, e) => sum + e.amount, 0);

  const dataByCategory = Object.values(expenses.reduce((acc, curr) => {
    if (!acc[curr.category]) acc[curr.category] = { name: curr.category, value: 0 };
    acc[curr.category].value += curr.amount;
    return acc;
  }, {} as Record<string, { name: string; value: number }>));

  const mapData = expenses.map((e, i) => ({
    x: (Math.random() * 10) - 5,
    y: (Math.random() * 10) - 5,
    z: e.amount,
    name: e.description || e.category
  }));

  // --- HANDLERS ---

  const handleFileUpload = async (event: React.ChangeEvent<HTMLInputElement>) => {
    const file = event.target.files?.[0];
    if (!file) return;

    setIsScanning(true);
    const reader = new FileReader();
    reader.onloadend = async () => {
      const base64 = (reader.result as string).split(',')[1];
      const result = await analyzeReceipt(base64);
      if (result) {
        setAmount(result.amount.toString());
        setCategory(result.category);
        setDesc(result.description);
      }
      setIsScanning(false);
    };
    reader.readAsDataURL(file);
  };

  const handleSubmit = (e: React.FormEvent) => {
    e.preventDefault();
    if (!amount) return;
    onAddExpense({
      id: Date.now().toString(),
      amount: parseFloat(amount),
      category,
      description: desc || category,
      date: new Date().toISOString(),
      location: userLocation ? { 
        lat: userLocation.lat, 
        lng: userLocation.lng, 
        name: userLocation.address 
      } : undefined
    });
    setAmount('');
    setDesc('');
  };

  const createSplit = () => {
    if (!splittingExpense) return;
    
    const splitAmount = parseFloat((splittingExpense.amount / splitShares).toFixed(2));
    const splitId = Math.random().toString(36).substring(7).toUpperCase();
    const link = `homeawayhub.app/split/${splitId}`;

    const newSplit: SplitRequest = {
      id: splitId,
      expenseId: splittingExpense.id,
      description: splittingExpense.description,
      totalAmount: splittingExpense.amount,
      splitAmount: splitAmount,
      shareLink: link,
      status: 'PENDING',
      date: new Date().toISOString()
    };

    setSplits([newSplit, ...splits]);
  };

  const shareViaWhatsapp = (text: string, link: string) => {
    const msg = `${text} ${link}`;
    window.open(`https://wa.me/?text=${encodeURIComponent(msg)}`, '_blank');
  };

  const markSplitPaid = (id: string) => {
    setSplits(splits.map(s => s.id === id ? { ...s, status: 'PAID' } : s));
  };

  const downloadReport = () => {
    const headers = "Date,Description,Category,Amount,Location\n";
    const csvContent = "data:text/csv;charset=utf-8," + headers + 
      expenses.map(e => `${new Date(e.date).toLocaleDateString()},${e.description},${e.category},${e.amount},${e.location?.name || ''}`).join("\n");
    const encodedUri = encodeURI(csvContent);
    const link = document.createElement("a");
    link.setAttribute("href", encodedUri);
    link.setAttribute("download", "my_expenses.csv");
    document.body.appendChild(link);
    link.click();
  };

  const handleAddRoommate = () => {
    if (newRoommateName.trim()) {
      setNewRoommates([...newRoommates, newRoommateName.trim()]);
      setNewRoommateName('');
    }
  };

  const createSharedBudget = () => {
    if (!newBudgetTitle || !newBudgetTotal || newRoommates.length === 0) return;

    const total = parseFloat(newBudgetTotal);
    // Split equally including yourself
    const perPerson = parseFloat((total / (newRoommates.length + 1)).toFixed(2));
    const budgetId = Math.random().toString(36).substring(7).toUpperCase();

    const roommates: Roommate[] = newRoommates.map(name => ({
      id: Math.random().toString(36).substring(7),
      name,
      amount: perPerson,
      status: 'PENDING'
    }));

    const newBudget: SharedBudget = {
      id: budgetId,
      title: newBudgetTitle,
      totalAmount: total,
      roommates,
      shareLink: `homeawayhub.app/budget/${budgetId}`,
      date: new Date().toISOString()
    };

    setSharedBudgets([newBudget, ...sharedBudgets]);
    setIsCreatingBudget(false);
    setNewBudgetTitle('');
    setNewBudgetTotal('');
    setNewRoommates([]);
  };

  // --- RENDER HELPERS ---

  const renderProgressBar = (current: number, max: number, label: string) => {
    const pct = Math.min((current / max) * 100, 100);
    let color = 'bg-emerald-500';
    if (pct > 75) color = 'bg-yellow-500';
    if (pct > 90) color = 'bg-red-500';

    return (
      <div className="mb-4">
        <div className="flex justify-between text-xs font-bold text-gray-300 mb-1">
          <span>{label}</span>
          <span className={pct > 90 ? 'text-red-400' : 'text-emerald-400'}>
            ‚Çπ{current} / ‚Çπ{max}
          </span>
        </div>
        <div className="w-full bg-gray-700 h-2 rounded-full overflow-hidden">
          <div className={`h-full ${color} transition-all duration-1000`} style={{ width: `${pct}%` }} />
        </div>
      </div>
    );
  };

  return (
    <div className="space-y-6 pb-24 text-green-100 relative">
      
      {/* --- NAVIGATION TABS --- */}
      <div className="flex gap-2 p-1 bg-gray-900/50 backdrop-blur-md rounded-xl border border-white/10 sticky top-0 z-20">
        <button 
          onClick={() => setActiveTab('overview')}
          className={`flex-1 py-2 rounded-lg text-sm font-bold transition-all ${activeTab === 'overview' ? 'bg-green-600 text-white shadow-lg' : 'text-gray-400 hover:text-white'}`}
        >
          Overview
        </button>
        <button 
          onClick={() => setActiveTab('budget')}
          className={`flex-1 py-2 rounded-lg text-sm font-bold transition-all ${activeTab === 'budget' ? 'bg-green-600 text-white shadow-lg' : 'text-gray-400 hover:text-white'}`}
        >
          Budget
        </button>
        <button 
          onClick={() => setActiveTab('splits')}
          className={`flex-1 py-2 rounded-lg text-sm font-bold transition-all ${activeTab === 'splits' ? 'bg-green-600 text-white shadow-lg' : 'text-gray-400 hover:text-white'}`}
        >
          Splits
          {splits.filter(s => s.status === 'PENDING').length > 0 && (
            <span className="ml-2 bg-red-500 text-white text-[10px] px-1.5 py-0.5 rounded-full">{splits.filter(s => s.status === 'PENDING').length}</span>
          )}
        </button>
      </div>

      {/* ================= OVERVIEW TAB ================= */}
      {activeTab === 'overview' && (
        <div className="space-y-6 animate-in fade-in duration-300">
          {/* Header Stats */}
          <GlassCard className="bg-black/40 border-green-500/30 p-6 relative overflow-hidden">
            <div className="flex justify-between items-start relative z-10">
              <div>
                <p className="text-xs text-green-400 uppercase tracking-widest font-bold">Total Spent</p>
                <h2 className="text-4xl font-bold text-white mt-1">‚Çπ{totalSpent.toLocaleString()}</h2>
              </div>
              <div className="text-right">
                <p className="text-xs text-green-400 font-bold">Budget Left</p>
                <p className={`text-xl font-bold ${(budget.total - totalSpent) < 500 ? 'text-red-400 animate-pulse' : 'text-green-300'}`}>
                  ‚Çπ{(budget.total - totalSpent).toLocaleString()}
                </p>
              </div>
            </div>
            
            <div className="mt-6 relative z-10">
              <div className="flex justify-between text-xs mb-1 text-green-200">
                <span>Monthly Goal: ‚Çπ{budget.total}</span>
                <span>{Math.round(percentUsed)}%</span>
              </div>
              <div className="w-full bg-gray-700/50 h-2 rounded-full overflow-hidden">
                <div 
                  className={`h-full rounded-full transition-all duration-1000 ${percentUsed > 90 ? 'bg-red-500' : 'bg-gradient-to-r from-green-500 to-emerald-400'}`} 
                  style={{ width: `${Math.min(percentUsed, 100)}%` }}
                ></div>
              </div>
            </div>

            {/* Background Decor */}
            <div className="absolute -right-10 -bottom-10 opacity-10">
               <TrendingUp size={150} />
            </div>
          </GlassCard>

          {/* Quick Add Form */}
          <GlassCard className="bg-black/30 p-4 border-green-500/20 backdrop-blur-xl">
            <form onSubmit={handleSubmit} className="space-y-4">
              <h3 className="font-bold text-lg text-green-100 flex items-center gap-2">
                <Plus size={20} className="text-green-500" /> New Expense
              </h3>
              <div className="flex gap-2">
                <input 
                  type="number" 
                  placeholder="Amount" 
                  value={amount}
                  onChange={(e) => setAmount(e.target.value)}
                  className="flex-1 bg-gray-800/50 border border-green-500/30 rounded-lg px-4 py-3 text-white focus:outline-none focus:border-green-400 placeholder-gray-500"
                />
                 <input 
                  type="text" 
                  placeholder="What for?" 
                  value={desc}
                  onChange={(e) => setDesc(e.target.value)}
                  className="flex-1 bg-gray-800/50 border border-green-500/30 rounded-lg px-4 py-3 text-white focus:outline-none focus:border-green-400 placeholder-gray-500"
                />
              </div>
              <div className="flex gap-2">
                <select 
                  value={category}
                  onChange={(e) => setCategory(e.target.value)}
                  className="flex-1 bg-gray-800/50 border border-green-500/30 rounded-lg px-4 py-3 text-white focus:outline-none focus:border-green-400 appearance-none"
                >
                  {Object.keys(budget.categories).map(cat => <option key={cat}>{cat}</option>)}
                  <option>Misc</option>
                </select>
                <button type="submit" className="bg-green-600 hover:bg-green-500 text-white rounded-lg px-6 font-bold shadow-lg shadow-green-900/50 transition-colors">
                  Save
                </button>
              </div>
            </form>
            
            <div className="mt-4 pt-4 border-t border-white/10 flex justify-center">
              <button 
                onClick={() => fileInputRef.current?.click()}
                className="flex items-center gap-2 text-sm text-green-300 hover:text-white transition-colors bg-white/5 px-4 py-2 rounded-full"
              >
                {isScanning ? <span className="animate-pulse">AI Analyzing Receipt...</span> : <><Camera size={16} /> Scan Receipt via AI</>}
              </button>
              <input type="file" ref={fileInputRef} className="hidden" accept="image/*" onChange={handleFileUpload} />
            </div>
          </GlassCard>

          {/* Visualization */}
          <GlassCard className="bg-black/30 p-4 min-h-[350px] border-green-500/20">
            <div className="flex justify-between items-center mb-4">
              <h3 className="text-lg font-bold text-green-100 flex items-center gap-2">
                <TrendingUp size={20} /> Analysis
              </h3>
              <div className="flex bg-gray-800/50 p-1 rounded-lg">
                <button onClick={() => setViewMode('chart')} className={`p-1.5 rounded-md transition-colors ${viewMode === 'chart' ? 'bg-green-600 text-white' : 'text-gray-400 hover:text-white'}`}><List size={16}/></button>
                <button onClick={() => setViewMode('map')} className={`p-1.5 rounded-md transition-colors ${viewMode === 'map' ? 'bg-green-600 text-white' : 'text-gray-400 hover:text-white'}`}><MapPin size={16}/></button>
              </div>
            </div>
            
            <div className="h-64 w-full">
              <ResponsiveContainer width="100%" height="100%">
                {viewMode === 'chart' ? (
                  <PieChart>
                    <Pie data={dataByCategory} cx="50%" cy="50%" innerRadius={60} outerRadius={80} paddingAngle={5} dataKey="value">
                      {dataByCategory.map((entry, index) => (
                        <Cell key={`cell-${index}`} fill={COLORS[index % COLORS.length]} />
                      ))}
                    </Pie>
                    <Tooltip contentStyle={{ backgroundColor: '#1f2937', borderColor: '#374151', borderRadius: '8px', color: '#fff' }} itemStyle={{ color: '#fff' }} />
                  </PieChart>
                ) : (
                  <ScatterChart margin={{ top: 20, right: 20, bottom: 20, left: 20 }}>
                    <XAxis type="number" dataKey="x" hide />
                    <YAxis type="number" dataKey="y" hide />
                    <ZAxis type="number" dataKey="z" range={[50, 400]} />
                    <Tooltip cursor={{ strokeDasharray: '3 3' }} content={({ payload }) => {
                      if (payload && payload.length) {
                        const data = payload[0].payload;
                        return (
                          <div className="bg-gray-900 border border-green-500/30 p-2 rounded shadow-xl text-xs text-white">
                            <p className="font-bold">{data.name}</p>
                            <p className="text-green-400">‚Çπ{data.z}</p>
                          </div>
                        );
                      }
                      return null;
                    }} />
                    <Scatter name="Expenses" data={mapData} fill="#10B981" />
                  </ScatterChart>
                )}
              </ResponsiveContainer>
            </div>
          </GlassCard>

          {/* Recent Transactions List */}
          <div className="space-y-3">
             <div className="flex justify-between items-center px-2">
                <h3 className="font-bold text-gray-300">Recent Transactions</h3>
                <button onClick={downloadReport} className="text-xs text-green-400 flex items-center gap-1 hover:underline"><Download size={12}/> Export CSV</button>
             </div>
             {expenses.slice(0, 5).map(exp => (
               <GlassCard key={exp.id} className="p-3 flex justify-between items-center bg-gray-800/40 border-gray-700">
                  <div className="flex items-center gap-3">
                    <div className="bg-gray-700/50 p-2 rounded-full text-green-400">
                      {exp.category === 'Food' ? 'üçî' : exp.category === 'Transport' ? 'üöå' : 'üõçÔ∏è'}
                    </div>
                    <div>
                      <p className="font-bold text-sm text-gray-200">{exp.description}</p>
                      <p className="text-xs text-gray-500">{new Date(exp.date).toLocaleDateString()}</p>
                    </div>
                  </div>
                  <div className="flex items-center gap-3">
                     <span className="font-mono font-bold text-green-400">‚Çπ{exp.amount}</span>
                     <button 
                       onClick={() => setSplittingExpense(exp)} 
                       className="p-2 bg-orange-600/20 text-orange-400 rounded-lg hover:bg-orange-600 hover:text-white transition-colors"
                       title="Split this bill"
                     >
                       <Share2 size={16} />
                     </button>
                  </div>
               </GlassCard>
             ))}
          </div>
        </div>
      )}

      {/* ================= BUDGET TAB ================= */}
      {activeTab === 'budget' && (
        <div className="space-y-6 animate-in slide-in-from-right duration-300">
           {/* Shared Budget Section */}
           <div className="bg-gradient-to-r from-indigo-900/50 to-purple-900/50 p-6 rounded-2xl border border-indigo-500/30">
             <div className="flex justify-between items-center mb-4">
                <h2 className="text-lg font-bold flex items-center gap-2 text-white"><Users size={20} className="text-indigo-400"/> Shared Budgets</h2>
                <button 
                  onClick={() => setIsCreatingBudget(true)}
                  className="bg-indigo-600 text-white text-xs px-3 py-1.5 rounded-full font-bold hover:bg-indigo-500 transition-colors"
                >
                  + Create Shared
                </button>
             </div>

             {sharedBudgets.length === 0 ? (
               <p className="text-sm text-gray-400 italic">No shared budgets yet. Create one to split monthly costs with roommates.</p>
             ) : (
               <div className="space-y-3">
                 {sharedBudgets.map(b => (
                   <GlassCard key={b.id} className="p-3 bg-gray-800/60 border-indigo-500/20">
                     <div className="flex justify-between mb-2">
                       <h3 className="font-bold text-white">{b.title}</h3>
                       <span className="text-indigo-300 font-bold">‚Çπ{b.totalAmount}</span>
                     </div>
                     <div className="space-y-1">
                        {b.roommates.map(r => (
                          <div key={r.id} className="flex justify-between text-xs items-center">
                            <span className="text-gray-400">{r.name}</span>
                            <div className="flex items-center gap-2">
                              <span className="text-gray-300">‚Çπ{r.amount}</span>
                              <button 
                                onClick={() => {
                                  const updated = sharedBudgets.map(sb => {
                                    if (sb.id !== b.id) return sb;
                                    return {
                                      ...sb,
                                      roommates: sb.roommates.map(rm => rm.id === r.id ? {...rm, status: (rm.status === 'PAID' ? 'PENDING' : 'PAID') as Roommate['status']} : rm)
                                    };
                                  });
                                  setSharedBudgets(updated);
                                }}
                                className={`w-4 h-4 rounded-full border flex items-center justify-center ${r.status === 'PAID' ? 'bg-green-500 border-green-500' : 'border-gray-500'}`}
                              >
                                {r.status === 'PAID' && <CheckCircle size={10} className="text-white"/>}
                              </button>
                            </div>
                          </div>
                        ))}
                     </div>
                     <div className="mt-3 pt-2 border-t border-gray-700 flex justify-end">
                       <button onClick={() => shareViaWhatsapp(`Join our shared budget "${b.title}":`, b.shareLink)} className="text-xs flex items-center gap-1 text-indigo-400 hover:text-white">
                         <Share2 size={12}/> Share Link
                       </button>
                     </div>
                   </GlassCard>
                 ))}
               </div>
             )}
           </div>

          <GlassCard className="p-6 bg-gradient-to-br from-gray-800 to-gray-900 border-green-500/20">
             <div className="flex justify-between items-center mb-6">
                <h2 className="text-xl font-bold flex items-center gap-2"><Settings size={20}/> Personal Budget</h2>
             </div>
             
             <div className="space-y-4">
                <div>
                  <label className="text-xs font-bold uppercase tracking-wider text-gray-400">Total Monthly Limit</label>
                  <div className="flex gap-2 mt-1">
                     <span className="bg-gray-700 px-3 py-3 rounded-l-lg text-gray-400 font-bold">‚Çπ</span>
                     <input 
                       type="number" 
                       value={budget.total} 
                       onChange={(e) => setBudget({...budget, total: parseInt(e.target.value) || 0})}
                       className="w-full bg-gray-800 border border-gray-600 rounded-r-lg px-3 py-2 text-white font-bold"
                     />
                  </div>
                </div>

                <div className="border-t border-gray-700 pt-4">
                  <h3 className="text-sm font-bold text-gray-300 mb-3">Category Limits</h3>
                  {Object.keys(budget.categories).map(cat => (
                    <div key={cat} className="mb-3 flex items-center gap-3">
                      <span className="w-24 text-sm text-gray-400">{cat}</span>
                      <input 
                        type="number"
                        value={budget.categories[cat]}
                        onChange={(e) => {
                          const newCats = {...budget.categories, [cat]: parseInt(e.target.value) || 0};
                          setBudget({...budget, categories: newCats});
                        }}
                        className="flex-1 bg-gray-800/50 border border-gray-600 rounded-r-lg px-3 py-2 text-white font-bold"
                      />
                    </div>
                  ))}
                </div>
             </div>
          </GlassCard>
        </div>
      )}

      {/* ================= SPLITS TAB ================= */}
      {activeTab === 'splits' && (
        <div className="space-y-6 animate-in slide-in-from-right duration-300">
           {/* Pending Splits */}
           <div className="space-y-4">
             <h2 className="text-xl font-bold flex items-center gap-2"><Share2 size={20} className="text-orange-400"/> Pending Splits</h2>
             
             {splits.length === 0 && (
               <div className="text-center py-10 text-gray-500">
                 <Share2 size={48} className="mx-auto mb-2 opacity-50"/>
                 <p>No active splits. Split an expense from the Overview tab.</p>
               </div>
             )}

             {splits.map(split => (
               <GlassCard key={split.id} className="p-4 bg-gray-800/60 border-orange-500/20">
                 <div className="flex justify-between items-start mb-2">
                   <div>
                     <h3 className="font-bold text-gray-200">{split.description}</h3>
                     <p className="text-xs text-gray-400">{new Date(split.date).toLocaleDateString()}</p>
                   </div>
                   <Badge color={split.status === 'PAID' ? 'bg-green-500 text-white' : 'bg-orange-500 text-white'}>
                     {split.status}
                   </Badge>
                 </div>
                 
                 <div className="flex justify-between items-center bg-gray-900/50 p-3 rounded-lg border border-white/5 mb-3">
                    <span className="text-sm text-gray-400">Split Amount</span>
                    <span className="text-xl font-bold text-orange-400">‚Çπ{split.splitAmount}</span>
                 </div>

                 <div className="flex gap-2">
                   <button 
                     onClick={() => shareViaWhatsapp(`Hey, here is the split for ${split.description}:`, split.shareLink)}
                     className="flex-1 bg-gray-700 hover:bg-gray-600 text-white py-2 rounded-lg text-xs font-bold flex items-center justify-center gap-2 transition-colors"
                   >
                     <Share2 size={14} /> Share Link
                   </button>
                   {split.status === 'PENDING' && (
                     <button 
                       onClick={() => markSplitPaid(split.id)}
                       className="flex-1 bg-green-600 hover:bg-green-500 text-white py-2 rounded-lg text-xs font-bold flex items-center justify-center gap-2 transition-colors"
                     >
                       <CheckCircle size={14} /> Mark Paid
                     </button>
                   )}
                 </div>
               </GlassCard>
             ))}
           </div>
        </div>
      )}

      {/* Split Modal (Overlay) */}
      {splittingExpense && (
        <div className="fixed inset-0 z-50 flex items-center justify-center bg-black/80 backdrop-blur-sm p-4 animate-in fade-in">
           <div className="bg-gray-900 border border-green-500/30 w-full max-w-sm rounded-2xl p-6 shadow-2xl relative">
              <button 
                onClick={() => setSplittingExpense(null)}
                className="absolute top-4 right-4 text-gray-400 hover:text-white"
              >
                <X size={20} />
              </button>
              
              <h3 className="text-xl font-bold text-white mb-1">Split Expense</h3>
              <p className="text-sm text-gray-400 mb-6">{splittingExpense.description}</p>
              
              <div className="space-y-6">
                <div className="bg-gray-800 p-4 rounded-xl text-center">
                  <p className="text-xs text-gray-400 uppercase">Total Bill</p>
                  <p className="
